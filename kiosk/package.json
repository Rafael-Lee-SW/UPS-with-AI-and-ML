{
  "name": "kiosk",
  "version": "1.0.0",
  "description": "Kiosk application using Electron and Next.js",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"next dev\" \"npm run electron\"",
    "build": "next build && electron-builder build",
    "start": "next start",
    "electron": "electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "next": "14.0.0",
    "node-hid": "^3.1.0",
    "pcsclite": "^1.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.2.4",
    "usb": "^2.14.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/react": "18.3.7",
    "concurrently": "^7.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^23.6.0",
    "typescript": "5.6.2"
  },
  "build": {
    "appId": "com.kiosk.app",
    "productName": "KioskApp",
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
